-- Create Customer table
CREATE TABLE Customer (
    C_id NUMBER PRIMARY KEY,
    C_Name VARCHAR2(50),
    Address VARCHAR2(100)
);

-- Create Orders table
CREATE TABLE Orders (
    O_ID NUMBER PRIMARY KEY,
    O_Name VARCHAR2(50),
    C_Id NUMBER,
    FOREIGN KEY (C_Id) REFERENCES Customer(C_id)
);

